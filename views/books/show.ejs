<% include ../partials/header %>

    <section class="container-fluid px-0">
        <div class="row justify-content-around archiveSection">
            <div class="col-xl-3 col-lg-2 col-md-2 d-none d-xl-block d-lg-block d-md-block"></div>
            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
                <div class="archiveContainer d-flex flex-column align-items-center">
                    <div id="archiveBox" class="d-flex flex-column justify-content-top align-items-center">
                        <div class="book-show-cover d-flex flex-column align-items-center mb-4 py-4">
                            <img src="/img/placeholder-cover.jpg">
                        </div>
                        <h4 class="book-show-text"><%= book.title %></h4>
                        <h2 class="book-show-text"><%= book.author %></h2>
                        <p class="book-show-text">Year: <%= book.year %></p>
                        <p class="book-show-text">Publisher: <%= book.publisher %></p>
                        <div class="card book-comment-container mt-3 bg-light">
                            <div class="card-body ">
                                <div class="text-right">
                                    <a class="btn btn-info" href="/books/<%= book._id %>/comments/submit">Add New Comment</a>
                                </div>
                                <hr>
                                <% book.comments.forEach(function(comment){ %>
                                    <div class="row">	
                                        <div class="col-md-12">
                                            <strong><%= comment.author %></strong>
                                            <span class="book-comment-date float-right"><%= comment.created.toDateString() %></span>
                                            <p class="book-comment-text"><%= comment.text %></p>	
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                    </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-2 col-md-2 d-none d-xl-block d-lg-block d-md-block"></div>
        </div>
    </section>

<% include ../partials/footer %>